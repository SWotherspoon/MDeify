{
  "name": "Markdown/MathJax Render",
  "version": "0.0.1",
  "manifest_version": 2,

  "description": "Render markdown/mathajx files as HTML.",
  "icons": {
    "128": "images/icon128.png",
    "48": "images/icon48.png",
    "19": "images/icon19.png",
    "16": "images/icon16.png"
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*.md*",
        "http://*/*.text",
        "http://*/*.markdown*",
        "http://*/*.mdown*",
        "http://*/*.txt*",
        "http://*/*.mkd*",
        "https://*/*.md*",
        "https://*/*.text",
        "https://*/*.markdown*",
        "https://*/*.mdown*",
        "https://*/*.txt*",
        "https://*/*.mkd*",
        "file://*/*.md",
        "file://*/*.markdown",
        "file://*/*.mdown",
        "file://*/*.text",
        "file://*/*.txt",
        "file://*/*.mkd"
      ],
      "js": [
          "js/jquery.js",
          "js/markdown-it.js",
          "js/markdown-it-mathjax.js",
          "js/markdown-it-footnote.js",
          "js/highlight.js",
          "js/mdeify.js"
      ]
    }
  ],
  "permissions": [
      "storage", 
      "tabs", 
      "pageCapture",
      "downloads",
      "<all_urls>"
  ],
  "web_accessible_resources": [
      "themes/bootstrap/bootstrap.css",
      "themes/bootstrap/cerulean.css",
      "themes/bootstrap/cosmo.css",
      "themes/bootstrap/cyborg.css",
      "themes/bootstrap/darkly.css",
      "themes/bootstrap/flatly.css",
      "themes/bootstrap/journal.css",
      "themes/bootstrap/lumen.css",
      "themes/bootstrap/paper.css",
      "themes/bootstrap/readable.css",
      "themes/bootstrap/sandstone.css",
      "themes/bootstrap/simplex.css",
      "themes/bootstrap/slate.css",
      "themes/bootstrap/spacelab.css",
      "themes/bootstrap/superhero.css",
      "themes/bootstrap/united.css",
      "themes/bootstrap/yeti.css",
      "themes/highlight/agate.css",
      "themes/highlight/androidstudio.css",
      "themes/highlight/arduino-light.css",
